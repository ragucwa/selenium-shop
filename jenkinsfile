pipeline {
    agent any

    stages {
        stage('Check Python and Pip version') {
            steps {
                bat 'python --version'
                bat 'pip --version'
            }
        }
        stage('Install dependencies') {
            steps {
                bat 'pip install -r requirements.txt'
            }
        }

        stage('Run tests') {
            steps {
                bat 'pytest ./tests'
            }
        }

        stage('Publish results') {
            steps {
                junit '**/test-results.xml'
            }
        }
    }
}