pipeline {
    agent any
    environment {
        automation_password = credentials('automation_password')
    }

    stages {
        stage('Check Python and Pip version') {
            steps {
                bat 'python --version'
                bat 'pip --version'
            }
        }
        stage('Install dependencies') {
            steps {
                bat 'pip install -r requirements.txt'
            }
        }

        stage('Run tests') {
            steps {
                bat 'pytest ./tests --junitxml=test_results/test-results.xml' 
            }
        }

        stage('Publish results') {
            steps {
                junit '**/test-results.xml'
            }
        }
    }
}