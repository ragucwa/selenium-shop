pipeline {
    agent any
    environment {
        automation_password = credentials('automation_password')
    }

    parameters{
        string(name: 'BRANCH', defaultValue: 'main', description: 'Branch to build')
        string(name: 'TEST_FOLDER', defaultValue: './tests', description: 'Folder to run tests')
    }

    stages{
        stage('Install dependencies') {
            steps {
                withEnv(['PIP_CACHE_DIR=.pip_cache']) {
                    bat "pip install -r requirements.txt"
                }
            }
        }

        stage('Run tests') {
            steps {
                bat "pytest ${params.TEST_FOLDER} --junitxml=test_results/test-results.xml"
            }
        }
    }
    post {
        always {
            archiveArtifacts artifacts: '**/test-results.xml'
            junit "**/test-results.xml"
            cleanWs()
        }
    }
}
